<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_26sdp"
                android:fontFamily="@font/lato"
                android:text="Create New Account"
                android:textAlignment="center"
                android:textColor="@color/brown"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/layoutImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:padding="@dimen/_6sdp"
                    android:background="@drawable/custom_image_profile"
                    app:riv_oval="true"/>

                <TextView
                    android:id="@+id/textAddImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add Image"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_10sdp" />
            </FrameLayout>

            <EditText
                android:id="@+id/email_register"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_marginTop="@dimen/_26sdp"
                android:background="@drawable/custom_input"
                android:elevation="@dimen/_1sdp"
                android:ems="10"
                android:hint="@string/email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/primary_yellow"
                android:textColorHint="@color/primary_yellow"
                tools:ignore="TextContrastCheck,TextContrastCheck" />

            <EditText
                android:id="@+id/username_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_26sdp"
                android:background="@drawable/custom_input"
                android:elevation="@dimen/_1sdp"
                android:ems="10"
                android:hint="Username"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/primary_yellow"
                android:textColorHint="@color/primary_yellow" />

            <EditText
                android:id="@+id/password_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_26sdp"
                android:background="@drawable/custom_input"
                android:elevation="@dimen/_1sdp"
                android:ems="10"
                android:hint="@string/password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/primary_yellow"
                android:textColorHint="@color/primary_yellow" />

            <EditText
                android:id="@+id/password_confirmation_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="@drawable/custom_input"
                android:elevation="@dimen/_1sdp"
                android:ems="10"
                android:hint="Confirm Password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/primary_yellow"
                android:textColorHint="@color/primary_yellow" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_26sdp"
                android:animateLayoutChanges="true">

                <Button
                    android:id="@+id/bt_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_26sdp"
                    android:layout_marginTop="@dimen/_26sdp"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="sign up"
                    android:textSize="@dimen/_20sdp"
                    app:cornerRadius="@dimen/_7sdp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_allreadyHaveAnAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_26sdp"
                android:fontFamily="@font/lato"
                android:text="Allready Have An Account"
                android:textColor="@color/brown"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>